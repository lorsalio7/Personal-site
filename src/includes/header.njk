<header class="main-header">
  <div class="container main-header__container">
    <nav class="main-header__navigation">
      {% if page | isHomePage %}
        <a class="site-logo">
          <svg class="site-logo__image" width="43" height="48">
            <use xlink:href="/img/sprite.svg#header-logo"></use>
          </svg>
        </a>
      {% else %}
        <a class="site-logo" href="/">
          <svg class="site-logo__image" width="43" height="48">
            <use xlink:href="/img/sprite.svg#header-logo"></use>
          </svg>
        </a>
      {% endif %}
      <button class="theme-button" type="button" title="Сменить тему сайта">
        <span class="theme-button__switch-slider"></span>
      </button>
    </nav>
  </div>
</header>