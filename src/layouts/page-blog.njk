{% include "top-blog.njk" %}
<body>
  {% include "header.njk" %}
  <main class="main">
    <div class="container container--article">
      <article class="full-article">
        <header class="full-article__header">
          <h1 class="full-article__title">{{ title }}</h1>
          <p class="full-article__info">
            <span class="full-article__tag">#{{ tag }} /</span>
            <time class="full-article__time" datetime="{{ page.date | mapDate }}">{{ page.date | ruDate }}</time>
          </p>
          <a class="full-article__category-link" href="/blog/">Блог</a>
        </header>
        <picture>
          <source srcset="{{ images["fullpost-webp"] }}" type="image/webp"><img class="full-article__image" src="{{ images["fullpost-jpg"] }}" width="968" height="544" alt="{{ title }}">
        </picture>
        <div class="raw-content">
          {{ content | safe }}
        </div>
        {% include "share.njk" %}
      </article>
    </div>
    {% include "prev-next.njk" %}
  </main>
  {% include "footer.njk" %}
  {% if code %}
    <script src="js/highlight.min.js"></script>
    <script>
      hljs.highlightAll();
    </script>
  {% endif %}
  <script src="js/script.min.js" defer></script>
</body>
</html>